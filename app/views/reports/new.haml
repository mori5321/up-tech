  .right-nav.col-3


%section.section.task-report
  // = form_for @report do |f|
  = form_for '' do |f|
    .task-details
      %ul
        %li
          %h4.title タスク名
          %p
            プロジェクトMTG
            %span 月タスク
          %h4.title 予定日時
          %p 2017/02/03 (月) 12:00
    .task-report-time
      %ul
        %li
          %h4.title 実行日時
          = f.date_field :date, class: 'form-control'
        %li
          %h4.title 実行時間
          = f.time_field :start_time, class: 'form-control'
      = f.submit "登録", class: 'btn btn-uptech btn-round btn-lg btn-block'
