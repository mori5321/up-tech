%header.header-nav.navbar.navbar-expand-lg.bg-uptech.fixed-top
  .left-nav.col-3
    %a{:onclick => "history.back()", :href => '#'} 戻る
  .col-6.text-center
    タスク報告
  .right-nav.col-3


%section.section.task-report
  // = form_for @report do |f|
  = form_for [@task, @report] do |f|
    .task-details
      %ul
        %li
          %h4.title タスク名
          %p
            = @task.title
            %span
              = "#{@task.kind}"
          %h4.title 予定日時
          %p= @task.start_to_finish

    .task-report-time
      = render "form"
      / %ul
      /   %li
      /     %h4.title 実行日時
      /     = f.date_field :date, class: 'form-control'
      /   %li
      /     %h4.title 実行時間
      /     = f.time_field :start_time, class: 'form-control'
      = f.submit "登録", class: 'btn btn-uptech btn-round btn-lg btn-block'
